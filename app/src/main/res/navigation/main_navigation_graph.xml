<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation_graph"
    app:startDestination="@id/loginFragment">
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.tmalty.ui.auth.login.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_loginFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_loginFragment_to_forgetPasswordFragment"
            app:destination="@id/forgetPasswordFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.tmalty.ui.auth.create_account.SignUpFragment"
        android:label="SignUpFragment"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_signUpFragment_to_confirmAccountStepOneFragment"
            app:destination="@id/verifyAccountStepOneFragment" />
    </fragment>
    <fragment
        android:id="@+id/forgetPasswordFragment"
        android:name="com.tmalty.ui.auth.forgetpassword.ForgetPasswordFragment"
        android:label="ForgetPasswordFragment"
        tools:layout="@layout/fragment_forget_password">
        <action
            android:id="@+id/action_forgetPasswordFragment_to_forgetPasswordVerificationFragment"
            app:destination="@id/forgetPasswordVerificationFragment" />
    </fragment>
    <fragment
        android:id="@+id/forgetPasswordVerificationFragment"
        android:name="com.tmalty.ui.auth.forgetpassword.ForgetPasswordVerificationFragment"
        android:label="ForgetPasswordVerificationFragment"
        tools:layout="@layout/fragment_forget_password_verification">
        <action
            android:id="@+id/action_forgetPasswordVerificationFragment_to_forgetPasswordResetFragment"
            app:destination="@id/forgetPasswordResetFragment" />
    </fragment>
    <fragment
        android:id="@+id/forgetPasswordResetFragment"
        android:name="com.tmalty.ui.auth.forgetpassword.ForgetPasswordResetFragment"
        android:label="ForgetPasswordResetFragment"
        tools:layout="@layout/fragment_forget_password_reset">
        <action
            android:id="@+id/action_forgetPasswordResetFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.tmalty.ui.main.fragments.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_homeFragment_to_departmentsFragment"
            app:destination="@id/departmentsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_purchaseFragment"
            app:destination="@id/purchaseFragment" />
        <action
            android:id="@+id/action_homeFragment_to_orderFragment"
            app:destination="@id/orderFragment" />
        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_homeFragment_to_chatsFragment"
            app:destination="@id/chatsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_serviceDetailsFragment"
            app:destination="@id/serviceDetailsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_cartFragment"
            app:destination="@id/cartFragment" />
    </fragment>
    <fragment
        android:id="@+id/departmentsFragment"
        android:name="com.tmalty.ui.main.fragments.departments.DepartmentsFragment"
        android:label="DepartmentsFragment"
        tools:layout="@layout/fragment_departments" />
    <fragment
        android:id="@+id/purchaseFragment"
        android:name="com.tmalty.ui.main.fragments.purchase.PurchaseFragment"
        android:label="PurchaseFragment"
        tools:layout="@layout/fragment_purchase">
        <action
            android:id="@+id/action_purchaseFragment_to_purchaseDetailsFragment"
            app:destination="@id/purchaseDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/orderFragment"
        android:name="com.tmalty.ui.main.fragments.orders.OrderFragment"
        android:label="OrderFragment"
        tools:layout="@layout/fragment_orders">
        <action
            android:id="@+id/action_orderFragment_to_orderDetailsFragment"
            app:destination="@id/orderDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.tmalty.ui.main.fragments.search.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_serviceDetailsFragment"
            app:destination="@id/serviceDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/chatsFragment"
        android:name="com.tmalty.ui.main.fragments.chats.ChatsFragment"
        android:label="ChatsFragment"
        tools:layout="@layout/fragment_chats" />
    <fragment
        android:id="@+id/serviceDetailsFragment"
        android:name="com.tmalty.ui.main.fragments.servicedetails.ServiceDetailsFragment"
        android:label="ServiceDetailsFragment"
        tools:layout="@layout/fragment_service_details" />
    <fragment
        android:id="@+id/orderDetailsFragment"
        android:name="com.tmalty.ui.main.fragments.orders.OrderDetailsFragment"
        android:label="OrderDetailsFragment"
        tools:layout="@layout/fragment_order_details" />
    <fragment
        android:id="@+id/purchaseDetailsFragment"
        android:name="com.tmalty.ui.main.fragments.purchase.PurchaseDetailsFragment"
        android:label="PurchaseDetailsFragment"
        tools:layout="@layout/fragment_purchase_details" />
    <fragment
        android:id="@+id/cartFragment"
        android:name="com.tmalty.ui.main.fragments.cart.CartFragment"
        android:label="CartFragment"
        tools:layout="@layout/fragment_cart">
        <action
            android:id="@+id/action_cartFragment_to_paymentFragment"
            app:destination="@id/paymentFragment" />
    </fragment>
    <fragment
        android:id="@+id/paymentFragment"
        android:name="com.tmalty.ui.main.fragments.payment.PaymentFragment"
        android:label="PaymentFragment"
        tools:layout="@layout/fragment_payment">
        <action
            android:id="@+id/action_paymentFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@+id/main_navigation_graph"
            app:popUpToInclusive="true" />
        <!--        <action-->
        <!--            android:id="@+id/action_paymentFragment_to_purchaseFragment"-->
        <!--            app:destination="@id/purchaseFragment"-->
        <!--            app:popUpTo="@+id/main_navigation_graph"-->
        <!--            app:popUpToInclusive="true"-->
        <!--            />-->
    </fragment>
    <fragment
        android:id="@+id/verifyAccountStepOneFragment"
        android:name="com.tmalty.ui.auth.create_account.VerifyAccountStepOneFragment"
        android:label="VerifyAccountStepOneFragment"
        tools:layout="@layout/fragment_verify_account_step_one"
        >
        <action
            android:id="@+id/action_confirmAccountStepOneFragment_to_confirmAccountStepTwoFragment"
            app:destination="@id/verifyAccountStepTwoFragment" />
    </fragment>
    <fragment
        android:id="@+id/verifyAccountStepTwoFragment"
        android:name="com.tmalty.ui.auth.create_account.VerifyAccountStepTwoFragment"
        tools:layout="@layout/fragment_verify_account_step_two"
        android:label="VerifyAccountStepTwoFragment">
        <action
            android:id="@+id/action_confirmAccountStepTwoFragment_to_confirmAccountStepThreeFragment"
            app:destination="@id/verifyAccountStepThreeFragment" />
    </fragment>
    <fragment
        android:id="@+id/verifyAccountStepThreeFragment"
        android:name="com.tmalty.ui.auth.create_account.VerifyAccountStepThreeFragment"
        android:label="VerifyAccountStepThreeFragment"
        tools:layout="@layout/fragment_verify_account_step_three"
        >
        <action
            android:id="@+id/action_confirmAccountStepThreeFragment_to_confirmAccountStepFourFragment"
            app:destination="@id/verifyAccountStepFourFragment" />
    </fragment>
    <fragment
        android:id="@+id/verifyAccountStepFourFragment"
        android:name="com.tmalty.ui.auth.create_account.VerifyAccountStepFourFragment"
        android:label="VerifyAccountStepFourFragment"
        tools:layout="@layout/fragment_verify_account_step_four"
        >
        <action
            android:id="@+id/action_confirmAccountStepFourFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>