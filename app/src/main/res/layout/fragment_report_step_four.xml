<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="lang"
            type="String" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/screen_background"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            app:title="@{@string/report}" />


        <TextView
            style="@style/TextStyleBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/horizontal_edge_spaces"
            android:layout_marginTop="@dimen/_8sdp"
            android:gravity="center"
            android:text="@string/thanks_for_letting_us_know"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/_10ssp" />


        <TextView
            style="@style/TextStyleRegular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/horizontal_edge_spaces"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/round_background"
            android:drawableStart="@drawable/check_icon"
            android:drawablePadding="@dimen/_8sdp"
            android:padding="@dimen/_8sdp"
            android:text="@string/false_news"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/_11ssp" />


        <TextView
            style="@style/TextStyleRegular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/horizontal_edge_spaces"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/round_background"
            android:drawableStart="@drawable/check_icon"
            android:drawablePadding="@dimen/_8sdp"
            android:padding="@dimen/_8sdp"
            android:text="@string/something_else"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/_11ssp" />

        <TextView
            style="@style/TextStyleRegular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/horizontal_edge_spaces"
            android:layout_marginVertical="@dimen/_20sdp"
            android:text="@string/we_will_use_this_information_to_improve_our_processes_independent_face_checkers_may_review_the_content"
            android:textColor="@color/text_second"
            android:textSize="@dimen/_8ssp" />

        <TextView
            style="@style/TextStyleBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/horizontal_edge_spaces"
            android:text="@string/other_steps_you_can_take"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/_11ssp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/horizontal_edge_spaces"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/ban_user_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <TextView
                    style="@style/TextStyleRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="@string/block_ahmed_s_profile"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/_11ssp" />

                <TextView
                    style="@style/TextStyleRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="@string/you_won_t_be_able_to_see_or_contact_with_each_other"
                    android:textColor="@color/text_second"
                    android:textSize="@dimen/_8ssp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/horizontal_edge_spaces"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/block_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <TextView
                    style="@style/TextStyleRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="@string/hide_all_from_ahmed"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/_11ssp" />

                <TextView
                    style="@style/TextStyleRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="@string/stop_seeing_posts_from_this_page"
                    android:textColor="@color/text_second"
                    android:textSize="@dimen/_8ssp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/done_button"
            style="@style/SolidGoldButton"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/_16sdp"
            android:layout_height="@dimen/_45sdp"
            app:cornerRadius="@dimen/_15sdp"
            android:layout_marginHorizontal="@dimen/horizontal_edge_spaces"
            android:text="@string/done"
            android:textSize="@dimen/_13ssp" />

    </LinearLayout>
</layout>