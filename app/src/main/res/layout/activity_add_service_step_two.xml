<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data></data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbarSize="2dp"
        android:scrollbars="vertical"
        tools:context=".uis.activityies_auth.activity_acount_verification.fragments.FragmentPhone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar"
                app:title="@{@string/add_service}" />

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_20sdp"
                android:max="90"
                android:progress="45"
                app:indicatorColor="@color/primary_color"
                app:trackColor="@color/greyLightBlack"
                app:trackCornerRadius="6dp"
                app:trackThickness="6dp" />

            <TextView
                android:id="@+id/gallery_textview"
                style="@style/MainTextRegular"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:drawablePadding="@dimen/_8sdp"
                android:text="@string/service_gallery"
                android:textColor="@color/text_color_main"
                app:drawableEndCompat="@drawable/circle_info_icon"
                app:drawableTint="@color/icon_color_secondary" />

            <TextView
                android:id="@+id/address_edittext"
                style="@style/SecondaryTextRegular"
                android:layout_width="wrap_content"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:hint="@string/service_gallery_tips"
                android:textColorHint="@color/input_hint"
                android:textSize="@dimen/_9ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_110sdp"
                    android:background="@drawable/department_item_background"
                    android:paddingVertical="@dimen/_40sdp"
                    android:src="@drawable/upload_image" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="10"
                    tools:listitem="@layout/recycler_item_layout_service_gallery" />
            </LinearLayout>

            <TextView
                android:id="@+id/service_price_textview"
                style="@style/MainTextRegular"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="@string/service_price"
                android:textColor="@color/text_color_main" />

            <TextView
                android:id="@+id/service_price_edittext"
                style="@style/EdittextMainStyle"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:hint="500 $"
                android:lines="1"
                android:textColorHint="@color/input_hint"
                android:textSize="@dimen/_9ssp"
                app:drawableEndCompat="@drawable/icon_arrow_bottom"
                app:drawableTint="@color/icon_color_secondary" />

            <TextView
                android:id="@+id/delivery_duration_textview"
                style="@style/MainTextRegular"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:drawablePadding="@dimen/_8sdp"
                android:text="@string/delivery_duration"
                android:textColor="@color/text_color_main"
                app:drawableEndCompat="@drawable/circle_info_icon"
                app:drawableTint="@color/icon_color_secondary" />

            <TextView
                android:id="@+id/delivery_duration_edittext"
                style="@style/EdittextMainStyle"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:hint="@string/choose"
                android:lines="1"
                android:textColorHint="@color/input_hint"
                android:textSize="@dimen/_9ssp"
                app:drawableEndCompat="@drawable/icon_arrow_bottom"
                app:drawableTint="@color/icon_color_secondary" />

            <androidx.viewpager.widget.ViewPager
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/previous_button"
                    style="@style/ButtonOutlineMain"
                    android:layout_width="match_parent"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_weight="1.5"
                    android:text="@string/previous" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/next_button"
                    style="@style/ButtonContainedPrimary"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:text="@string/next" />

            </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>
