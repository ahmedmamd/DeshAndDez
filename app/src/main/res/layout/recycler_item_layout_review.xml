<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/_5sdp"
    android:background="@drawable/department_item_background"
    android:padding="@dimen/_10sdp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/provider_imageview"
        android:layout_width="@dimen/_48sdp"
        android:layout_height="@dimen/_48sdp"
        android:scaleType="fitXY"
        android:src="@drawable/home_service_image_test"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="@dimen/_10sdp" />

    <TextView
        android:id="@+id/provider_name_textview"
        style="@style/MainTextBold"
        android:layout_width="0dp"
        android:layout_marginStart="@dimen/_8sdp"
        android:text="@string/test_provider_name"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/provider_imageview"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/service_textview"
        style="@style/SecondaryTextRegular"
        android:layout_width="0dp"
        android:gravity="start"
        android:text="@string/test_time_ago"
        android:textAlignment="viewStart"
        android:textSize="@dimen/_9sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/provider_name_textview"
        app:layout_constraintTop_toBottomOf="@id/provider_name_textview" />

    <TextView
        android:id="@+id/reviews_textview"
        style="@style/MainTextRegular"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/_16sdp"
        android:text="@string/test_review_text"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/service_textview" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/reviews_textview">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rounded_screen__background"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingVertical="@dimen/_10sdp">

            <TextView
                style="@style/MainTextRegular"
                android:paddingHorizontal="@dimen/_2sdp"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/delivery_on_time"
                android:textSize="@dimen/_9ssp" />

            <RatingBar
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:backgroundTint="@color/primary_color_10"
                android:numStars="5"
                android:progressTint="@color/rating_bar_active_color"
                android:rating="4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:layout_weight="1"
            android:background="@drawable/rounded_screen__background"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingVertical="@dimen/_10sdp">

            <TextView
                style="@style/MainTextRegular"
                android:paddingHorizontal="@dimen/_2sdp"
                android:text="@string/follow_up"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/_9ssp" />

            <RatingBar
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:backgroundTint="@color/primary_color_10"
                android:numStars="5"
                android:progressTint="@color/rating_bar_active_color"
                android:rating="5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rounded_screen__background"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingVertical="@dimen/_10sdp">

            <TextView
                style="@style/MainTextRegular"
                android:paddingHorizontal="@dimen/_2sdp"
                android:text="@string/quality_of_service"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="@dimen/_9ssp" />

            <RatingBar
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:backgroundTint="@color/primary_color_10"
                android:numStars="5"
                android:progressTint="@color/rating_bar_active_color"
                android:rating="5" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
