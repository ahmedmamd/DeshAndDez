<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="lang"
            type="String" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_16sdp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingVertical="@dimen/_5sdp">

                <TextView
                    style="@style/MainTextRegular"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textSize="@dimen/_8ssp"
                    android:text="@string/average_speed_of_response" />

                <TextView
                    style="@style/PrimaryTextBold"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:text="@{60 +@string/min}" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingVertical="@dimen/_5sdp">

                <TextView
                    style="@style/MainTextRegular"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textSize="@dimen/_8ssp"
                    android:text="@string/published_services" />

                <TextView
                    style="@style/PrimaryTextBold"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:text="4" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingVertical="@dimen/_5sdp">
                    <TextView
                    style="@style/MainTextRegular"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textSize="@dimen/_8ssp"
                    android:text="@string/number_of_clients" />
                <TextView
                    style="@style/PrimaryTextBold"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:text="65" />
            </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>