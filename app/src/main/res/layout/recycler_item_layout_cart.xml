<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_10sdp"
    android:paddingHorizontal="@dimen/_10sdp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/service_imageview"
        android:layout_width="@dimen/_93sdp"
        android:layout_height="@dimen/_73sdp"
        android:scaleType="fitXY"
        android:src="@drawable/home_service_image_test"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="@dimen/_10sdp" />

    <TextView
        android:id="@+id/service_name_textview"
        style="@style/MainTextRegular"
        android:layout_width="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="3"
        android:text="@string/test_service_description"
        android:textAlignment="viewStart"
        app:layout_constraintStart_toEndOf="@id/service_imageview"
        app:layout_constraintTop_toTopOf="parent" />


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/service_provider_imageview"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:scaleType="fitXY"
        android:src="@drawable/user_image_for_test"
        app:layout_constraintBottom_toBottomOf="@id/service_imageview"
        app:layout_constraintStart_toStartOf="@id/service_name_textview"
        app:riv_corner_radius="@dimen/_12sdp" />

    <TextView
        android:id="@+id/service_provider_name_textview"
        style="@style/SecondaryTextRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:gravity="start"
        android:text="@string/test_provider_name"
        android:textAlignment="viewStart"
        android:textSize="@dimen/_9ssp"
        app:layout_constraintBottom_toBottomOf="@id/service_provider_imageview"
        app:layout_constraintStart_toEndOf="@id/service_provider_imageview"
        app:layout_constraintTop_toTopOf="@id/service_provider_imageview" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/service_upgrades_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/service_imageview"
        tools:itemCount="3"
        tools:listitem="@layout/recycler_item_layout_service_upgrade" />

    <com.tmalty.ui.customviews.numberpicker.NumberPickerView
        android:id="@+id/number_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/service_upgrades_recycler" />

    <TextView
        android:id="@+id/total_textview"
        style="@style/MainTextBold"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="@string/total"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/number_picker" />

    <TextView
        android:id="@+id/added_service_textview"
        style="@style/SecondaryTextRegular"
        android:text="@string/added_service"
        app:layout_constraintBottom_toTopOf="@id/line_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/total_textview" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/added_service_textview"
        app:layout_constraintEnd_toStartOf="@id/remove_imageview"
        app:layout_constraintTop_toTopOf="@id/total_textview">

        <TextView
            android:id="@+id/price_textview"
            style="@style/MainTextBold"
            android:text="400"
            android:textSize="@dimen/_15ssp" />

        <TextView
            style="@style/PrimaryTextRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$"
            android:layout_marginStart="@dimen/_5sdp"
            android:textSize="@dimen/_15ssp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/remove_imageview"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/remove_icon"
        android:padding="@dimen/_5sdp"
        app:layout_constraintBottom_toBottomOf="@id/added_service_textview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/total_textview" />

    <View
        android:id="@+id/line_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginVertical="@dimen/_10sdp"
        android:background="@color/background_color_secondary"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
