<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/screen_background_color"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/whiteBlack">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/back"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:padding="3dp"
                        android:src="@drawable/ic_back_arrow"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/blackWhite" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:fontFamily="@font/font_bold"
                        android:text="@string/service_details"
                        android:textColor="@color/blackWhite"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@id/back"
                        app:layout_constraintStart_toEndOf="@id/back"
                        app:layout_constraintTop_toTopOf="@id/back" />

                    <ImageView
                        android:id="@+id/share"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:padding="3dp"
                        android:src="@drawable/share"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/blackWhite" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/serviceImage"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:src="@drawable/home_service_image_test"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="1:.75"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardSeller"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        app:cardBackgroundColor="@color/whiteBlack2"
                        app:cardCornerRadius="40dp"
                        app:cardElevation="0dp"
                        app:layout_constraintBottom_toBottomOf="@id/serviceImage"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/serviceImage"

                        >

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="4dp"
                            app:cardBackgroundColor="@color/input_stroke"
                            app:cardCornerRadius="40dp"
                            app:cardElevation="0dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <com.makeramen.roundedimageview.RoundedImageView
                                    android:id="@+id/sellerImage"
                                    android:layout_width="@dimen/_50sdp"
                                    android:layout_height="@dimen/_50sdp"
                                    android:layout_marginStart="@dimen/_8sdp"
                                    android:layout_marginEnd="@dimen/_8sdp"
                                    android:src="@drawable/user_image_for_test"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/tvSellerName"
                                    style="@style/MainTextBold"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="16dp"
                                    android:layout_marginEnd="16dp"
                                    android:ellipsize="end"
                                    android:lines="1"
                                    android:text="@string/test_provider_name"
                                    android:textColor="@color/blackWhite"
                                    app:layout_constraintBottom_toTopOf="@id/iconSellerType"
                                    app:layout_constraintEnd_toStartOf="@id/chat"
                                    app:layout_constraintStart_toEndOf="@id/sellerImage"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <ImageView
                                    android:id="@+id/iconSellerType"
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:padding="3dp"
                                    android:src="@drawable/job"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="@id/tvSellerName"
                                    app:layout_constraintTop_toBottomOf="@id/tvSellerName"

                                    />

                                <TextView
                                    android:id="@+id/tvSellerType"
                                    style="@style/MainTextRegular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginEnd="8dp"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/font_regular"
                                    android:gravity="start"
                                    android:lines="1"
                                    android:text="@string/test_account_type"
                                    android:textAlignment="viewStart"
                                    android:textColor="@color/grey"
                                    app:layout_constraintBottom_toBottomOf="@id/iconSellerType"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0"
                                    app:layout_constraintStart_toEndOf="@id/iconSellerType"
                                    app:layout_constraintTop_toTopOf="@id/iconSellerType" />

                                <ImageView
                                    android:id="@+id/chat"
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_marginEnd="16dp"
                                    android:background="@drawable/circle_background"
                                    android:padding="@dimen/_10sdp"
                                    android:src="@drawable/chat_icon"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:tint="@color/icon_color_secondary2" />
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.cardview.widget.CardView>
                    </androidx.cardview.widget.CardView>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="16dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/font_regular"
                    android:text="@string/test_service_description"
                    android:textColor="@color/blackWhite"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_5sdp">

                    <TextView
                        style="@style/PrimaryTextRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/test_sub_department_name"
                        android:textSize="@dimen/_9ssp" />


                    <TextView
                        style="@style/SecondaryTextRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_2sdp"
                        android:gravity="center"
                        android:text="/"
                        android:textSize="@dimen/_9ssp" />

                    <TextView
                        style="@style/PrimaryTextRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/test_sub_department_service_name"
                        android:textSize="@dimen/_9ssp" />
                </LinearLayout>

                <TextView
                    style="@style/SecondaryTextRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="16dp"
                    android:ellipsize="end"
                    android:text="@string/test_service_details_introduction"
                    android:textSize="@dimen/_11ssp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@drawable/service_details_card_background"
                    android:padding="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/service_card_textview"
                        style="@style/SecondaryTextRegular"
                        android:background="@drawable/service_details_card_background"
                        android:backgroundTint="@color/screen_background_color"
                        android:drawableStart="@drawable/service_details_info_icon"
                        android:drawablePadding="@dimen/_5sdp"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_5sdp"
                        android:text="@string/service_card"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/reviews_textview"
                        style="@style/PrimaryTextRegular"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text='@{@string/reviews +"( 53 )"}'
                        android:textSize="@dimen/_10ssp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/service_card_textview" />

                    <RatingBar
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:progressTint="@color/rating_bar_active_color"
                        android:rating="4"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/reviews_textview" />

                    <TextView
                        android:id="@+id/buyers_textview"
                        style="@style/MainTextRegular"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/buyers"
                        android:textSize="@dimen/_10ssp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/reviews_textview" />

                    <TextView
                        android:id="@+id/buyers_value_textview"
                        style="@style/MainTextRegular"
                        android:text="135"
                        android:textSize="@dimen/_10ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/buyers_textview" />

                    <TextView
                        android:id="@+id/running_orders_textview"
                        style="@style/MainTextRegular"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/running_orders"
                        android:textSize="@dimen/_10ssp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/buyers_textview" />

                    <TextView
                        android:id="@+id/running_orders_value_textview"
                        style="@style/MainTextRegular"
                        android:text="2"
                        android:textSize="@dimen/_10ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/running_orders_textview" />

                    <TextView
                        android:id="@+id/service_price_textview"
                        style="@style/MainTextRegular"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/service_price_start_with"
                        android:textSize="@dimen/_10ssp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/running_orders_textview" />

                    <TextView
                        android:id="@+id/service_price_value_textview"
                        style="@style/MainTextRegular"
                        android:text="35 $"
                        android:textSize="@dimen/_10ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/service_price_textview" />


                    <TextView
                        android:id="@+id/delivery_duration_textview"
                        style="@style/MainTextRegular"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/delivery_duration"
                        android:textSize="@dimen/_10ssp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/service_price_textview" />

                    <TextView
                        android:id="@+id/delivery_duration_value_textview"
                        style="@style/MainTextRegular"
                        android:text="ثلاثة ايام"
                        android:textSize="@dimen/_10ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/delivery_duration_textview" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:id="@+id/service_upgrades_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/MainTextBold"
                        android:drawableStart="@drawable/service_details_upgrades_icon"
                        android:drawablePadding="@dimen/_8sdp"
                        android:text="@string/upgrades_are_available_for_this_service" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/service_upgrades_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:listitem="@layout/recycler_item_layout_service_upgrade"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="3" />
                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@drawable/service_details_card_background"
                    android:padding="@dimen/_10sdp">

                    <com.tmalty.ui.customviews.numberpicker.NumberPickerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/number_picker"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/total_textview"
                        style="@style/MainTextBold"
                        android:text="@string/total"
                        app:layout_constraintTop_toBottomOf="@id/number_picker"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/added_service_textview"
                        style="@style/SecondaryTextRegular"
                        android:text="@string/added_service"
                        app:layout_constraintBottom_toTopOf="@id/add_to_cart_button"
                        app:layout_constraintTop_toBottomOf="@id/total_textview"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/price_textview"
                        style="@style/MainTextBold"
                        android:text="400$"
                        android:textSize="@dimen/_15ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/total_textview"
                        app:layout_constraintBottom_toBottomOf="@id/added_service_textview" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/add_to_cart_button"
                        style="@style/ButtonContainedPrimary"
                        android:layout_width="match_parent"
                        app:icon="@drawable/add_to_cart_icon"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="@string/add_to_cart"
                        android:textSize="@dimen/_11ssp" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>